{
  "lock": false,
  "tasks": {
    "check": "deno check --unstable mod.ts ext/zod.ts",
    "test": "deno test -A --unstable --trace-ops",
    "bench": "deno bench -A --unstable",
    "prep": "deno task check && deno fmt && deno lint && deno task test"
  },
  "fmt": {
    "semiColons": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["./tests"]
  },
  "bench": {
    "include": ["./benchmarks"]
  }
}
